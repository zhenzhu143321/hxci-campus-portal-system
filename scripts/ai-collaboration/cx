# é¢œè‰²å®šä¹‰
CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

# é»˜è®¤é…ç½®
MODEL="openai/gpt-5"  # æ”¹ä¸ºé»˜è®¤ä½¿ç”¨GPT-5
API_KEY="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"
TEMPERATURE=0.3
MAX_TOKENS=3000

# å¤„ç†å‚æ•°
if [ $# -eq 0 ] || [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
    echo -e "${CYAN}CX - AIç¼–ç¨‹åŠ©æ‰‹ (OpenRouterç‰ˆ)${NC}"
    echo ""
    echo "ç”¨æ³•:"
    echo "  cx <é—®é¢˜>               # ä½¿ç”¨é»˜è®¤æ¨¡å‹(GPT-5)"
    echo "  cx -m <æ¨¡å‹> <é—®é¢˜>     # æŒ‡å®šæ¨¡å‹"
    echo ""
    echo "ç¤ºä¾‹:"
    echo "  cx åˆ†æä»£ç å®‰å…¨é—®é¢˜"
    echo "  cx -m openai/gpt-4o ä¼˜åŒ–æ•°æ®åº“æŸ¥è¯¢"
    echo "  cx -m google/gemini-2.5-flash è§£é‡Šè¿™æ®µä»£ç "
    echo ""
    echo "å¯ç”¨æ¨¡å‹:"
    echo "  openai/gpt-5          - GPT-5 (é»˜è®¤,æœ€å¼º)"
    echo "  openai/gpt-4o          - GPT-4o (å¿«é€Ÿ,æ¨è)"
    echo "  google/gemini-2.5-pro  - Gemini 2.5 Pro"
    echo "  google/gemini-2.5-flash - Gemini 2.5 Flash (å¿«é€Ÿ)"
    exit 0
fi

# æ£€æŸ¥æ˜¯å¦æŒ‡å®šæ¨¡å‹
if [ "$1" = "-m" ]; then
    MODEL="$2"
    shift 2
fi

PROMPT="$*"

if [ -z "$PROMPT" ]; then
    echo -e "${RED}é”™è¯¯: è¯·æä¾›é—®é¢˜${NC}"
    echo "ä½¿ç”¨ 'cx --help' æŸ¥çœ‹å¸®åŠ©"
    exit 1
fi

echo -e "${CYAN}ğŸ¤– ä½¿ç”¨æ¨¡å‹: $MODEL${NC}"
echo -e "${GREEN}ğŸ’­ æ­£åœ¨æ€è€ƒ...${NC}"
echo ""

# è°ƒç”¨OpenRouter API
RESPONSE=$(curl -s https://openrouter.ai/api/v1/chat/completions \
  -H "Authorization: Bearer $API_KEY" \
  -H "Content-Type: application/json" \
  -H "HTTP-Referer: https://github.com/hxci-campus-portal" \
  -H "X-Title: CX Command" \
  -d "{
    \"model\": \"$MODEL\",
    \"messages\": [
      {\"role\": \"system\", \"content\": \"You are an expert programming assistant. Provide clear, concise code suggestions and analysis. Answer in the same language as the user's question. For Chinese questions, answer in Chinese.\"},
      {\"role\": \"user\", \"content\": \"$PROMPT\"}
    ],
    \"temperature\": $TEMPERATURE,
    \"max_tokens\": $MAX_TOKENS
  }")

# æå–å“åº”å†…å®¹
CONTENT=$(echo "$RESPONSE" | jq -r '.choices[0].message.content' 2>/dev/null)

if [ "$CONTENT" = "null" ] || [ -z "$CONTENT" ]; then
    echo -e "${RED}é”™è¯¯: è·å–å“åº”å¤±è´¥${NC}"
    echo "$RESPONSE" | jq '.' 2>/dev/null
    exit 1
fi

# è¾“å‡ºå“åº”
echo "$CONTENT"