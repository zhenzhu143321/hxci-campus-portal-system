// 格式化日期
const formatDate = (dateStr: string): string => {
  if (!dateStr) return ''
  try {
    const date = new Date(dateStr)
    if (isNaN(date.getTime())) return dateStr
    return dayjs(date).format('YYYY-MM-DD')
  } catch (error) {
    console.error('日期格式化错误:', error)
    return dateStr
  }
}

